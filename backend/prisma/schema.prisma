generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())

  conversations Conversation[]
  files         UploadedFile[]
  fileReadCursors FileReadCursor[]
}

model Conversation {
  id        Int      @id @default(autoincrement())
  title     String
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id])
  messages Message[]

  fileReadCursors FileReadCursor[]
}

model Message {
  id             Int      @id @default(autoincrement())
  conversationId Int
  role           String
  content        String

  // 新增：状态（一期用 String 最简单，后续可改成 enum）
  status         String   @default("completed") // streaming/completed/stopped/error
  // 新增：错误信息（可空）
  error          String?

  // Token统计字段
  promptTokens      Int?    // 提示词token数
  completionTokens  Int?    // 回复token数
  totalTokens       Int?    // 总token数
  cost              Float?  // 本次调用费用(美元)
  estimated         Boolean @default(false)  // 是否为估算值

  createdAt      DateTime @default(now())
  // 新增：更新时间（update content 时会自动更新）
  updatedAt      DateTime @updatedAt

  conversation Conversation @relation(fields: [conversationId], references: [id])
}

model UploadedFile {
  id           Int      @id @default(autoincrement())
  userId       Int
  storedName   String
  originalName String
  mime         String
  size         Int
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  readCursors FileReadCursor[]
}

model FileReadCursor {
  id             Int      @id @default(autoincrement())
  userId         Int
  conversationId Int
  fileId         Int
  offset         Int      @default(0)
  updatedAt      DateTime @updatedAt

  user         User         @relation(fields: [userId], references: [id])
  conversation Conversation @relation(fields: [conversationId], references: [id])
  file         UploadedFile @relation(fields: [fileId], references: [id])

  @@unique([conversationId, fileId])
  @@index([userId])
}
